#!/bin/bash

mkdir -p /alpine
url="https://dl-cdn.alpinelinux.org/alpine/latest-stable/main/x86_64/"
tools=$(wget -qO- "$pkg_list_url" | grep "apk-tools-static" | awk -F "href=\"" '{print $2}' | awk -F "\">" '{print $1}')
mkdir -p "/alpine"
wget -q --show-progress "https://dl-cdn.alpinelinux.org/alpine/latest-stable/main/x86_64/$tools" -O /alpine
tar --warning=no-unknown-keyword -xzf "/alpine/apk-tools-static" -C "/alpine"
/alpine/sbin/apk.static --arch $(uname -m) -X http://dl-cdn.alpinelinux.org/alpine/edge/main/ -U --allow-untrusted --root "/alpine" --initdb add alpine-base
chmod +x /alpine/setup-rootfs-aurora
chroot /alpine /bin/sh -c /setup-rootfs-aurora