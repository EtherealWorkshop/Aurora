#!/bin/bash

source /usr/share/aurora/functions

installcros() {
echo -e "$CYAN_B"
cat <<'EOF' | center
╒════════════════════════════════════════╕
│          ┏━ ┓          ┏━┓┏━━          │
│          ┃  ┣┓┏┓┏┓┏┳┓┏┓┃ ┃┗━┓          │
│          ┗━ ┛┗┛ ┗┛┛ ┗┻━┻━┻━━┛          │
╘════════════════════════════════════════╛
EOF
echo -e "$COLOR_RESET"
}

shimboot() {
echo -e "$CYAN_B"
cat <<'EOF' | center
╒════════════════════════════════════════╕
│          ┏━┓┏┳┓┏┓   ┏━━┓               │
│          ┣┳┛┃┃┃┣┫   ┗━┓┣┓•┏┳┓          │
│          ┛┗━┛ ┗┛┗   ━━┛┛┗┻┛ ┗          │
╘════════════════════════════════════════╛
EOF
echo -e "$COLOR_RESET"
}

download() {
echo -e "$CYAN_B"
cat <<'EOF' | center
╒════════════════════════════════════════╕
│            ┳┓       ┏     ┏            │
│            ┃┃┏┓┓ ┓┳┓┃┏┓┏┳┏┫            │
│            ┻┛┗┛┗┻┻┛┗┻┗┛┗┻┗┛            │
╘════════════════════════════════════════╛
EOF
echo -e "$COLOR_RESET"
}

wifi() {
echo -e "$CYAN_B"
cat <<'EOF' | center
╒════════════════════════════════════════╕
│             ┳┓          ┓              │
│             ┃┃┏┓╋┓ ┓┏┓┏┓┣┫             │
│             ┛┗┻━┻┗┻┻┗┛┛ ┛┗             │
╘════════════════════════════════════════╛
EOF
echo -e "$COLOR_RESET"
}

$1